<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="achatCard" prefHeight="200.0" prefWidth="150.0" styleClass="achat-card" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.Achats.AchatCardController">

    <ImageView fx:id="imageOutil" fitWidth="75" fitHeight="75" preserveRatio="true" />

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label fx:id="labelFormation" styleClass="achat-label" text="Formation Name" />
    <Label fx:id="labelOutil" styleClass="achat-label" text="Outil Name" />
    <Label fx:id="labelTotal" styleClass="achat-label" text="Total" />
    <Label fx:id="labelDate" styleClass="achat-label" text="Date" />

</VBox>
